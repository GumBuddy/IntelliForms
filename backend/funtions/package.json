{
  "name": "intelliforms-backend",
  "version": "1.0.0",
  "description": "Backend serverless para IntelliForms",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=generateUploadUrl",
    "dev": "npm-run-all --parallel dev:*",
    "dev:form": "functions-framework --target=generarFormularioHttp --port=8080",
    "dev:upload": "functions-framework --target=generateUploadUrl --port=8081",
    "dev:notify": "functions-framework --target=notifyFileUploaded --port=8082",
    "deploy": "gcloud functions deploy generateUploadUrl --runtime nodejs16 --trigger-http --allow-unauthenticated",
    "deploy-all": "echo 'Desplegando todas las funciones...' && npm run deploy",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.5.1",
    "@google-cloud/pubsub": "^4.0.0",
    "@google-cloud/storage": "^6.9.0",
    "@google-cloud/vision": "^4.0.2",
    "@google/generative-ai": "^0.1.3",
    "busboy": "^1.6.0",
    "mammoth": "^1.6.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "intelliforms",
    "serverless",
    "google-cloud-functions",
    "file-upload"
  ],
  "author": "Tu Nombre",
  "license": "MIT"
}